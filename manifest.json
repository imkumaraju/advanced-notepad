{
  "manifest_version": 3,
  "name": "Advanced Notepad",
  "version": "1.0.0",
  "description": "A premium note-taking extension with local storage and cloud backup.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.google-analytics.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}