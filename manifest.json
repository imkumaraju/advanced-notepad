{
  "manifest_version": 3,
  "name": "Advanced Notepad",
  "version": "1.0.0",
  "description": "A premium note-taking extension with local storage and cloud backup.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
